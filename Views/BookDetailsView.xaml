<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookVerse.Views.BookDetailsView">

    <ScrollView>
        <StackLayout Padding="16">
            <Image Source="{Binding SelectedBook.Image}" HeightRequest="200" Aspect="AspectFill" HorizontalOptions="Center"/>
            <Label Text="{Binding SelectedBook.Title}" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,16,0,0"/>
            <Label Text="{Binding SelectedBook.Author}" FontSize="20" HorizontalOptions="Center"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="0,16,0,0">
                <Button Text="Horror" BackgroundColor="#DDDDDD" CornerRadius="20" Padding="10"/>
                <Button Text="Sci-Fi" BackgroundColor="#DDDDDD" CornerRadius="20" Padding="10" Margin="10,0"/>
                <Button Text="Fantasy" BackgroundColor="#DDDDDD" CornerRadius="20" Padding="10"/>
            </StackLayout>
            <Label Text="{Binding SelectedBook.Description}"
                   FontSize="16"
                   HorizontalOptions="Center"
                   VerticalOptions="CenterAndExpand"
                   Margin="0,16,0,0"
                   HorizontalTextAlignment="Center"/>
            <Button Text="Read Now" FontSize="20" BackgroundColor="#2196F3" TextColor="White" CornerRadius="10" Padding="10" HorizontalOptions="Center" Margin="0,16,0,0"/>
        </StackLayout>
    </ScrollView>
</ContentPage>
