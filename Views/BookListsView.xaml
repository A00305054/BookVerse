<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookVerse.Views.BookListsView"
             Title="Book Lists">

    <StackLayout Padding="20" Spacing="20">
        <Label Text="Borrowed Books"
               FontSize="18"
               FontAttributes="Bold"/>
        <CollectionView ItemsSource="{Binding BorrowedBooks}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10">
                        <Label Text="{Binding Title}" FontSize="16" />
                        <Label Text="{Binding Author}" FontSize="14" TextColor="Gray" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Label Text="Reserved Books"
               FontSize="18"
               FontAttributes="Bold"/>
        <CollectionView ItemsSource="{Binding ReservedBooks}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10">
                        <Label Text="{Binding Title}" FontSize="16" />
                        <Label Text="{Binding Author}" FontSize="14" TextColor="Gray" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
