<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:BookVerse.ViewModels"
             x:Class="BookVerse.Views.HomeView"
             x:DataType="viewmodels:HomeViewModel">

    <ContentView.BindingContext>
        <viewmodels:HomeViewModel />
    </ContentView.BindingContext>

    <StackLayout>

        <!-- Page Header -->
        <StackLayout Orientation="Horizontal" Padding="10" VerticalOptions="Start">
            <Label Text="BookVerse" FontSize="24" FontAttributes="Bold" VerticalOptions="Center" />
            <Image Source="settings_icon.png" HeightRequest="30" WidthRequest="30" HorizontalOptions="EndAndExpand" VerticalOptions="Center" />
            <Image Source="user_avatar.png" HeightRequest="40" WidthRequest="40" HorizontalOptions="End" VerticalOptions="Center" />
        </StackLayout>

        <!-- Title "Best Seller" -->
        <Label Text="Best Seller" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" Margin="10,0" />

        <!-- Horizontal List of Bestseller Books -->
        <CollectionView ItemsSource="{Binding BestSellers}" HorizontalScrollBarVisibility="Never" ItemsLayout="HorizontalList">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Image Source="{Binding Image}" HeightRequest="200" WidthRequest="130" Margin="5" />
                        <Label Text="{Binding Title}" FontSize="12" HorizontalOptions="Center" />
                        <Label Text="{Binding Rating}" FontSize="10" HorizontalOptions="Center" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Tab Control -->
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="10">
            <Button Text="Latest" Command="{Binding FilterCommand}" CommandParameter="Latest" />
            <Button Text="Popular" Command="{Binding FilterCommand}" CommandParameter="Popular" />
            <Button Text="Trending" Command="{Binding FilterCommand}" CommandParameter="Trending" />
        </StackLayout>

        <!-- Another Horizontal List of Books with Ratings -->
        <CollectionView ItemsSource="{Binding FilteredBooks}" HorizontalScrollBarVisibility="Never" ItemsLayout="HorizontalList">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Image Source="{Binding Image}" HeightRequest="150" WidthRequest="100" Margin="5" />
                        <Label Text="{Binding Title}" FontSize="12" HorizontalOptions="Center" />
                        <Label Text="{Binding Rating}" FontSize="10" HorizontalOptions="Center" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Navigation Bar -->
        <StackLayout Orientation="Horizontal" Padding="10" VerticalOptions="EndAndExpand">
            <Image Source="home_icon.png" HeightRequest="30" WidthRequest="30" HorizontalOptions="CenterAndExpand" />
            <Image Source="search_icon.png" HeightRequest="30" WidthRequest="30" HorizontalOptions="CenterAndExpand" />
            <Image Source="library_icon.png" HeightRequest="30" WidthRequest="30" HorizontalOptions="CenterAndExpand" />
            <Image Source="profile_icon.png" HeightRequest="30" WidthRequest="30" HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </StackLayout>

</ContentView>
